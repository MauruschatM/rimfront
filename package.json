{
  "name": "rimfront",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "check": "biome check --write .",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F @rimfront/backend dev",
    "dev:setup": "turbo -F @rimfront/backend dev:setup"
  },
  "dependencies": {
    "dotenv": "catalog:",
    "zod": "catalog:",
    "@rimfront/env": "workspace:*"
  },
  "devDependencies": {
    "turbo": "^2.6.3",
    "@biomejs/biome": "2.3.10",
    "ultracite": "6.5.0",
    "typescript": "^5",
    "@rimfront/config": "workspace:*"
  },
  "packageManager": "pnpm@10.20.0"
}
